<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zestworld.Join_DAO.JoinDAO">
	<insert id="insert" parameterType="com.zestworld.Table_DTO.Users_DTO">
		insert into users(userid, password,name,phone)
		values(#{userid}, #{password},#{name},#{phone})
	</insert>
	<insert id="insertRoll" parameterType="com.zestworld.Table_DTO.Role_DTO">
		insert into Role(userid, authority_name)
		values(#{userid}, #{authority_name})
	</insert>
	<select id="GetSearchUser" resultType="com.zestworld.Table_DTO.Users_DTO">
		select * from users where userid=#{userid}
	</select>
	
	<update id="pwEdit" >
		update users set password=#{password} where userid=#{userid} or phone =#{phone}
	</update>
	
	<update id="updateUser">
		update users set password=#{password} name=#{name}, phone=#{phone} ,img=#{img} where userid=#{userid}
	</update>
	
	
