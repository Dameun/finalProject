<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zestworld.Alarm_DAO.AlarmDAO">
	<insert id="getAlarmList" parameterType="com.zestworld.Table_DTO.Alarm_DTO">
		insert into users(userid, password,name,phone)
		values(#{userid}, #{password},#{name},#{phone})
	</insert>
	<insert id="insert" parameterType="com.zestworld.Table_DTO.Alarm_DTO">
		insert into Role(userid, authority_name)
		values(#{userid}, #{authority_name})
	</insert>
	<select id="getAlarm" resultType="com.zestworld.Table_DTO.Alarm_DTO">
		select * from users where userid=#{userid}
	</select>
</mapper>